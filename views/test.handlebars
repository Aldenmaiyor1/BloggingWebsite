<link rel="stylesheet" href="/css/calendar.css">

<div id="calendar-container">
    <div id="calendar-header">
        <button class="btn-month" id="prev" onclick="prevMonth()"><i class="fa-solid fa-chevron-left"></i></button>
        <span id="current-date" onclick="generateArticlesByMonth()"></span>
        <button class="btn-month" id="next" onclick="nextMonth()"><i class="fa-solid fa-chevron-right"></i></button>
    </div>
    <table id="calendar-dates">
        <thead>
            <tr>
                <th>S</th>
                <th>M</th>
                <th>T</th>
                <th>W</th>
                <th>T</th>
                <th>F</th>
                <th>S</th>
            </tr>
        </thead>
        <tbody id="calendar-body">
        </tbody>
    </table>
    <div>
     <button id="calendar-close">
        <a href="/">
            <i class="fa-regular fa-circle-xmark"></i>
    </button>
    </div>

</div>
