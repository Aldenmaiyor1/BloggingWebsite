        <div id="aboutUserAvatar">
            <img src="{{this.avatar}}" alt="user avatar" style="width: 110px">
        </div>

        <div class="aboutInfo">
            Name: {{this.username}}
        </div>
        <div class="aboutInfo">
            {{this.total_followers}} Total Followers: 
        </div>
        <div class="aboutInfo">
            Email: {{this.email}}
        </div>
        {{#if information}}
        <div class="aboutInfo">
            {{#if bio}}
            Bio: {{this.bio}}
            {{/if}}
        </div>
        <div class="aboutInfo">
            {{#if gender}}
            Gender: {{this.gender}}
            {{/if}}
        </div>
        <div class="aboutInfo">
            {{#if address}}
            Address: {{this.address}}
            {{/if}}
        </div>
        {{/if}}

        <a href="/my_posts" id="viewMyPostsLink">View my posts >>> </a>

    </div>

    {{!-- Following sections on the right side --}}
    <div id="profileFollowingDiv">
        <h2 id="followingTitle">Following</h2>
        {{#if subscribers}}
        <div>
            {{#each subscribers}}
            <img src="{{this.user_avatar}}" alt="subsciber avatar">
            <p>{{this.username}}</p>
            <button>
                <div>
                    <img src="{{this.user_avatar}}" alt="subsciber avatar">
                    <p>{{this.username}}</p>
                    <p>{{this.bio}}</p>
                    <p>{{this.total_followers}} Followers</p>
                    <button>Following</button>
                </div>
            </button>
            <div>
                <a href="/subscribers">See all ({{this.total_subscribers}})</a>
            </div>
            {{/each}}
        </div>
        {{else}}
        <p>You are not following anyone!</p>
        {{/if}}
    </div>
</div>

{{!-- Options section --}}
<div id="inforForm">
    {{!-- <button type="submit">Update information</button> --}}

    <form action="/update_info" method="post" id="information">
        <h3 id="updateTitle"><strong>Update information</strong></h3>

        <div class="updateSubtitles">
            <label for="bio">Bio:</label>
        </div>
        <div id="bioInput">
            <textarea name="bio" id="bio" cols="30" rows="10" maxlength="160"></textarea>
        </div>

        <div class="updateSubtitles">
            <label for="gender">Gender:</label>
        </div>
        <div id="genderDropdown">
            <select name="gender" id="gender">
                <option value=""></option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Non-binary">Non-Binary</option>
            </select>
        </div>

        <div class="updateSubtitles">
            <label for="address">Address</label>
        </div>
        <div id="addressInput">
            <input type="text" name="address" id="address">
        </div>

        <div id="saveChanges">
            <button type="submit">
                <span>Save changes</span>
                <svg viewBox="-5 -5 110 110" preserveAspectRatio="none" aria-hidden="true">
                    <path d="M0,0 C0,0 100,0 100,0 C100,0 100,100 100,100 C100,100 0,100 0,100 C0,100 0,0 0,0" />
                </svg>
            </button>
        </div>

        <div id="deleteAccount">
            <button type="submit">
                <span>Delete account</span>
                <svg viewBox="-5 -5 110 110" preserveAspectRatio="none" aria-hidden="true">
                    <path d="M0,0 C0,0 100,0 100,0 C100,0 100,100 100,100 C100,100 0,100 0,100 C0,100 0,0 0,0" />
                </svg>
            </button>
        </div>

    </form>

</div>

