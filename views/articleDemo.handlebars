                        <div class="comment_content">{{this.comment_content}}</div>
                        <div class="comment_by_name">{{this.comment.name}}</div>
                        <div class="comment_by_icon">{{this.comment.icon}}</div>
                        <div class="comment_by_timestamp">{{this.comment.timestamp}}</div>
                    </div>
                    {{/each}}
                </div>
            {{else}}
            <div id="comments_title">Comments (0)</div>
            <div id="comments_container">This article has not had comment yet...</div>

            {{/if}} --}}


        </div>

    </div>
</div>


