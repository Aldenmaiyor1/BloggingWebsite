<div id="article_container">
    <div id="specific_category_title"><span id="articles_home"><a href="/">All</a></span> / <span id="current_category">{{current_category}}</span>
    </div>

    <p id="article_title">Title: {{title}}</p>

    <div id="author_details">
        <div id="author_icon">{{author_icon}}</div>
        <p id="author_name"> By {{author_name}}</p>
        <p id="article_timestamp">Published on {{date_of_publish}}</p>
    </div>

    <p id="article_content">
        Content: {{content}}
    </p>

    <hr>

    <div id="like_section">
        <div id="like">
            {{article_like_number}} 
            <button class="like-btn">
                <i class="fa-regular fa-thumbs-up" id=""></i>
                Like</button>
        </div>

        <div id="unlike">
            {{#if like_article}}
            <span id="btn_unlike">Un like</span>
            {{/if}}
        </div>
    </div>

    <hr>

    <div class="hidden"></div>
    <button id="open-comment">Comment</button>

    <div class="comment hidden">
        <form class="comment-form">
            <button id="close-comment">Cancel</button>
            <textarea name="comments" id="comments_id" placeholder="Add your comment here..." rows="5"
                cols="60"></textarea>
            <input type="submit" name="submit_button" value="Respond!"/>
            
        </form>

        {{!-- <div id="exist_comments">
            {{#if exist_comments}}
            <div id="comments_title">Comments ({{exist_comments.length}})</div>

                <div id="comments_container">
                    {{#each exist_comments}}
