<form action='/register' method='post' id='register_page_body'>
    <div id='register_page_container'>
        <div id='register_title'>
            <h1>Register</h1>
            <div>
                <p>Already have an account? <a href='/login'>Log in</a></p>
            </div>
        </div>

        <p>Please fill in to register your account</p>
        <hr />

        <div id='register_fillinbox'>
            <div id='register_name' class='input-container'>
                <label for='name' class='styled-label'>Name</label>
                <input type='text' name='name' id='name' placeholder='Enter name' required class='styled-input'>
            </div>

            <div id='register_username' class='input-container'>
                <label for='username' class='styled-label'>Username</label>
                <input type='text' name='username' id='username' placeholder='Enter username' required
                    class='styled-input'>
                <p id='username-error' style='color: red; display: none;'></p>
            </div>

            <div id='register_email' class='input-container'>
                <label for='email' class='styled-label'>Email</label>
                <input type='text' name='email' id='email' placeholder='Enter email' class='styled-input'>
            </div>

            <div id='register_password' class='input-container'>
                <label for='password' class='styled-label'>Password</label>
                <input type='password' name='password' id='password' placeholder='Enter password' required
                    class='styled-input'>
                <img src='/images/svg/eye.svg' alt='eye icon' id='passwordEye' class='icon'>
            </div>

            <div id='confirm_password' class='input-container'>
                <label for='confirm_password' class='write'>Confirm password</label>
                <input type='password' name='confirm_password' id='confirm-password' placeholder='Enter password'
                    required class='write'>
                <p id='password-format-error' style='color: red; display: none;'></p>
                <p id='password-match-error' style='color: red; display: none;'></p>
            </div>


        </div>


